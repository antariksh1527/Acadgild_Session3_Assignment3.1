<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.antariksh.vibgyorscreenapp.MainActivity">

    <TextView
        android:id="@+id/redTextView"
        android:text="RED"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:layout_weight=".14"
        android:gravity="center" />

    <TextView
        android:id="@+id/orangeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:background="#FFA500"
        android:gravity="center"
        android:text="ORANGE"
        android:textColor="#000" />

    <TextView
        android:id="@+id/yellowTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="YELLOW"
        android:textColor="#000" />

    <TextView
        android:id="@+id/greenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:background="#008000"
        android:gravity="center"
        android:text="GREEN"
        android:textColor="#000" />

    <TextView
        android:id="@+id/blueTextView"
        android:text="BLUE"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:background="#0000ff"
        android:gravity="center" />

    <TextView
        android:id="@+id/indigoTextView"
        android:text="INDIGO"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:background="#4b0082"
        android:gravity="center" />

    <TextView
        android:id="@+id/violetTextView"
        android:text="VIOLET"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:background="#EE82EE"
        android:gravity="center" />

</LinearLayout>
